{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.raykit-app.app",
  "build": {
    "beforeDevCommand": "pnpm dev:desktop",
    "devUrl": "http://localhost:4399",
    "beforeBuildCommand": "pnpm build:desktop",
    "frontendDist": "../../build"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Raykit",
        "url": "/app",
        "width": 750,
        "height": 450,
        "decorations": false,
        "hiddenTitle": true,
        "skipTaskbar": true,
        "center": true,
        "transparent": true,
        "visible": false,
        "windowEffects": {
          "effects": ["hudWindow", "acrylic", "micaLight"],
          "radius": 12
        }
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
