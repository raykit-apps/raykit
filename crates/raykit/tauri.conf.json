{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Raykit",
  "version": "0.1.0",
  "identifier": "Raykit",
  "build": {
    "beforeDevCommand": "pnpm dev:desktop",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build:desktop",
    "frontendDist": "../../out"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/app/extensions/*"]
  }
}
